<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:src="@drawable/poisearchlist_item_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/juli_5dp"
        android:layout_marginRight="@dimen/juli_20dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/first_search_location_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#393A39"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/second_search_location_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#7F827F"
            android:textSize="@dimen/ziti_15sp"/>

    </LinearLayout>

</LinearLayout>