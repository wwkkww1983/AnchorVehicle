<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#d6d8d8"
    android:focusable="true" 
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gztop" >

        <Button
            android:id="@+id/noticeback"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/gzback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="信息通告"
            android:textColor="#2a2a2a"
            android:textSize="26dp" />

        <Button
            android:id="@+id/bthisrecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_centerVertical="true"
            android:layout_alignParentRight="true"    
             android:layout_marginRight="10dp"      
            android:background="@drawable/gzreset"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#e5e5e5"
        android:padding="30dp" >

        <EditText
            android:id="@+id/ntcontent"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:gravity="top"
            android:hint="最多300字"
            android:maxLength="300" >           
        </EditText>

        <Button
            android:id="@+id/ntsend"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignRight="@+id/ntcontent"
            android:layout_below="@+id/ntcontent"
            android:layout_marginTop="16dp"
            android:background="@drawable/btfasong" />
    </RelativeLayout>

</LinearLayout>